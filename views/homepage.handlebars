<div class="row container mx-auto">
  <div class="col-7">
    {{#each posts as |post|}}

      <a
        href="posts/{{post.id}}"
        class="card m-2"
        id="postCard"
        style="height: 10rem; text-decoration: none;border: 4px solid #d9b08c; border-radius: 10px;"
      >
        <div class="card-header" style="background-color: #d9b08c;">
          <h5 class="card-title"> {{post.title}} </h5>
          <p class="card-subtitle mb-2 xt-body-secondary"
          >Made on {{format_date post.created_at}}</p>
        </div>
        <div class="card-body" style="background-color: #d1e8e2;">

          <p class="card-text"> {{post.content}} </p>
        </div>
      </a>

    {{/each}}
  </div>

