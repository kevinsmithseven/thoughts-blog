<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daily Thoughts Thread</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body style="background-color: #116466;height: 100vh;">
    <header>
      <nav class="navbar navbar-expand-lg d-flex " style="background-color: #2c3531; color:#fccd04">
        <div class="container-fluid">

          <img 
          src="/images/history-huddle-high-resolution-logo-transparent.png" alt="History Huddle" 
          href="/" 
          class=""
          style="height:6em;"
          />

          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          {{#if loggedIn}}
          <div class="container-fluid d-flex justify-content-center">
            <button type="button" class="btn" style="background-color: #fccd04;">Add post</button>
          </div>
          {{else}}
          <div class="container-fluid d-flex justify-content-center">
            <button type="button" class="btn" style="background-color: #fccd04;"><a class="nav-link" href="/signup">Signup to add post</a></button>
          </div>
           
          {{/if}}

          <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav" style="color: #fccd04;">
            <ul class="navbar-nav" >
              
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              
              
                {{#if loggedIn}}
                <li class="nav-item">
                <a class="nav-link" href="/user">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="logout" href="/">Logout</a>
              </li>
              {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup">Signup</a>             
              </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main >
      
      {{{ body }}}


    </main>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"
  ></script>
  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
</html>